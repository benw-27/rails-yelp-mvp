<%= simple_form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div class="errors">
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.select :category, options_for_select(['chinese', 'italian', 'japanese', 'french', 'belgian']) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
